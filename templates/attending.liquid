{% block content %}

  <section class="attending inner">
    
    <h1>2013 Attendees</h1>

    <article class="attendees">

        {% for attendee in model.attendees reversed %}

          {% if attendee.status == "Paid" and attendee.show == "Yes" %}

            {% case attendee.attended %} 
              {% when "This is my first!" or "This is their first!" %} 
                <ol class="attendee attendeeFirst">
              {% when "This is my second!" or "This is their second!" %} 
                <ol class="attendee attendeeSecond">  
              {% when "This is my third!" or "This is their third!" %} 
                <ol class="attendee attendeeThird">
              {% when "This is my fourth!" or "This is their fourth!" %}  
                <ol class="attendee attendeeFourth"> 
              {% when "I've been to them all!" or "They've been to them all!" %}
                <ol class="attendee attendeeFifth">
            {% endcase %} 

              {% if attendee.avatar != '' %}  
                <li class="attendee-avatar"><img src="{{ attendee.avatar }}" /></li>
              {% else %}
                <li class="attendee-avatar"><img src="{{"images/missing.png" | asset_url }}" /></li>
              {% endif %}

              <li class="attendee-name">{{ attendee.firstName }} {{ attendee.lastName }}</li>

              {% if attendee.title != '' %}
                <li class="attendee-title">{{ attendee.title }}</li>
              {% endif %}

              {% if attendee.company != '' %}
                <li class="attendee-company">{{ attendee.company }}</li>
              {% endif %}

              {% if attendee.twitter != '' %}
                <li class="attendee-twitter">
                  <a href="https://twitter.com/{{ attendee.twitter }}"><i aria-role="hidden" data-icon="&#x74;"></i></a>
                </li>
              {% endif %}

              {% if attendee.github != '' %}
                <li class="attendee-github">
                  <a href="https://github.com/{{ attendee.github }}"><i aria-role="hidden" data-icon="&#x75;"></i></a>
                </li>
              {% endif %}

              {% if attendee.dribbble != '' %}
                <li class="attendee-dribbble">
                  <a href="http://dribbble.com/{{ attendee.dribbble }}"><i aria-role="hidden" data-icon="&#x64;"></i></a>
                </li>
              {% endif %}

              {% if attendee.codepen != '' %}
                <li class="attendee-codepen">
                  <a href="http://www.codepen.io/{{ attendee.codepen }}"><i aria-role="hidden" data-icon="&#x21;"></i></a></li>
              {% endif %}

              {% if attendee.website != '' %}
                <li class="attendee-website">
                  <a href="{{ attendee.website }}"><i aria-role="hidden" data-icon="&#x62;"></i></a>
                </li>
              {% endif %}

              {% case attendee.attended %} 
                {% when "This is my first!" or "This is their first!" %} 
                  <li class="attendeeFirst attendee-year">1st Time Attending</li> 
                {% when "This is my second!" or "This is their second!" %} 
                  <li class="attendeeSecond attendee-year">2nd Time Attending</li>  
                {% when "This is my third!" or "This is their third!" %} 
                  <li class="attendeeThird attendee-year">3rd Time Attending</li>
                {% when "This is my fourth!" or "This is their fourth!" %}  
                  <li class="attendeeFourth attendee-year">4th Time Attending</li> 
                {% when "I've been to them all!" or "They've been to them all!" %}  
                  <li class="attendeeFifth attendee-year">Attended Every Time!</li>
              {% endcase %} 

            </ol>

          {% endif %}

        {% endfor %}

    </article>

  </section>

{% endblock %}